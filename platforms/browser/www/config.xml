<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.ptm.pendel" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Pendel</name>
    <description>
        Pendel App - Leuke voordelen in jouw stad
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Robs, Marloes, Mathijs, Nick
    </author>
    <icon src="www/img/PENDEL_logo-icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
